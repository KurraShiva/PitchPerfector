<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <div class="col-6">
    <!-- Bootstrap Image carousel  -->
    <div id="groundCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% ground.images.forEach((img,i) => { %>
        <div class="carousel-item <%= i===0? 'active':'' %>">
          <img src="<%= img.url %>" class="d-block w-100" alt="..." />
        </div>
        <% }) %>
      </div>

      <% if(ground.images.length > 1) { %>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#groundCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#groundCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } %>
    </div>

    <!-- Images of ground  -->
    <div class="card mb-3">
      <!-- ground name and description  -->
      <div class="card-body">
        <div style="text-align: center">
          <h5 class="card-title"><%= ground.title %></h5>
        </div>
        <p class="card-text"><%= ground.description %></p>
      </div>

      <!-- ground details  -->
      <ul class="list-group list-group-flush" style="text-align: right">
        <li class="list-group-item text-muted"><%= ground.location %></li>
        <li class="list-group-item text-muted">
          Posted by <b><%= ground.author.username %></b>
        </li>
        <li class="list-group-item">â‚¹ <%= ground.price %> per hour</li>
      </ul>

      <!-- Update and delete ground buttons (only for owner of ground) -->
      <% if(currentUser && ground.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a href="/grounds/<%=ground._id%>/edit" class="card-link btn btn-info"
          >Edit Ground</a
        >
        <form
          class="d-inline"
          action="/grounds/<%= ground._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete Ground</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <div class="col-6">
    <!--  Display map  -->
    <div id="map" style="height: 300px; margin-bottom: 40px"></div>

    <% if(currentUser) { %>
    <h2>Leave a review</h2>
    <!-- Form to add review  -->
    <form
      action="/grounds/<%=ground._id%>/reviews"
      method="post"
      class="mb-3 validated-form"
      novalidate
    >
      <!-- Starability stars form  -->
      <fieldset class="starability-basic" style="width: 100%">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="0"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <!-- Review text  -->
      <div class="mb-3" style="margin-top: 2px">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="6"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide description</div>
      </div>

      <!-- Submit review button -->
      <div style="text-align: right">
        <button class="btn btn-success">Submit Review</button>
      </div>
    </form>
    <% } else { %>
    <div style="text-align: center; margin-bottom: 20px">
      <h2>Login to review</h2>
    </div>
    <% } %> <% if(ground.reviews.length === 0) { %>
    <div style="text-align: center; margin-bottom: 30px">
      <h5>No reviews for this ground !</h5>
    </div>
    <% } else {%>
    <h2>Reviews for this ground :</h2>
    <% } %>

    <!-- Iterate reviews array   -->
    <% for(let review of ground.reviews) {%>

    <div class="card mb-3">
      <div class="card-body" style="padding: 10px 20px">
        <!-- Name of reviewer  -->
        <h6
          class="card-subtitle mb-2 text-muted"
          style="font-size: 16px; margin-top: 8px"
        >
          @<%= review.author.username %>
        </h6>

        <!-- Display stars using starability -->
        <div>
          <p class="starability-result" data-rating="<%= review.rating %>">
            Rated: <%= review.rating %> stars
          </p>
        </div>

        <!-- Review text  -->
        <p style="font-size: 16px"><%= review.body %></p>

        <!-- Delete review button (only for author of review) -->
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form
          action="/grounds/<%=ground._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-sm btn-danger" style="margin-bottom: 5px">
            Delete
          </button>
        </form>
        <% } %>
      </div>
    </div>

    <% } %>
  </div>
</div>

<!-- Initialize values to be accessed in below scripts  -->
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const ground = <%- JSON.stringify(ground) %>
</script>

<!-- Access mapBox code from showPageMaps.js -->
<script src="/javascripts/showPageMaps.js"></script>
